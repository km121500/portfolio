<%= attachment_image_tag @event,:image ,:fill, 100, 100,format: 'jpeg',fallback: "no_image.jpeg" %>
  <%= @event.title %>
  <%= @event.date %>
  <%= @event.place %>
  <%= @event.user.name %>
<% if current_user.following?(@event.user.id) %>
  <%= link_to "フォロー外す", user_relationships_path(@event.user.id), method: :delete, class: "btn btn-primary" %>
<% else %>
  <%= link_to "フォローする", user_relationships_path(@event.user.id), method: :post, class: "btn btn-success" %>
<% end %>