<h2>イベント一覧</h2>

<% @events.each do |event| %>
<div>
  <%= attachment_image_tag event,:image ,:fill, 100, 100,format: 'jpeg',fallback: "no_image.jpeg" %>
  <%= event.title %>
  <%= event.date %>
  <%= event.place %>
  <%= event.user.name %>
  <%= link_to 'ユーザー詳細',users_path(event) %>
  <%= link_to "show",event_path(event) %>
  <% if event.user == current_user %>
  <%= link_to "削除",event_path(event),method: :delete %>
  <%= link_to "編集",edit_event_path(event) %>
  <% end %>

</div>
<% end %>

