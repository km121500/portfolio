<% if current_user != event.user %>
  <% if current_user.following?(event.user) %>
    <%= link_to "フォロー外す", user_relationships_path(event.user.id), method: :delete, class: "btn btn-primary text-white" %>
  <% else %>
    <%= link_to "フォローする", user_relationships_path(event.user.id), method: :post,class: "btn btn-success text-white" %>
  <% end %>
<% end %>
