<h2>新規投稿</h2>
<%= form_with model:@event, local:true do |f| %>

    <div class="form-group">
        <%= attachment_image_tag @event, :image ,:fill, 60, 60, fallback: "no_image.jpg"%>
        <%= f.label :画像 %>
        <%= f.attachment_field :image, class: "form-control-file event_image" %>
    </div>
    <div class="form-group">
        <%= f.label :タイトル %>
        <%= f.text_field :title, class: "form-control title" %>
    </div>
    <div class="form-group">
        <%= f.label :内容 %>
        <%= f.text_area :body, class: "form-control body" %>
    </div>
    <div class="form-group">
        <%= f.label :場所（県を入力してください） %>
        <%= f.text_field :place, class: "form-control place" %>
    </div>
    <div class="form-group">
        <%= f.label :日付 %>
        <%= f.text_field :date, class: "form-control date" %>
    </div>
     <%= f.submit '投稿' %>
<% end %>
