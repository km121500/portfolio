<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= attachment_image_tag @event,:image ,:fill, 300, 300,format: 'jpeg',fallback: "no_image.jpeg" %>
    </div>
    
    <div class="col-md-6">
      <%= @event.title %>
      <%= @event.date %>
      <%= @event.place %>
      <%= @event.user.name %>
      <%= render 'public/relationships/button', event: @event %>
    
    
    <tbody>
      <tr>
        <td><%= @event.user.name %></td>
        <td><%= @event.title %></td>
        <td><%= @event.body %></td>
        <td><%= link_to "編集", edit_event_path(@event) %></td>
        <% if @event.bookmarked_by?(current_user) %>
          <td><%= link_to "ブックマークを外す", event_bookmarks_path(@event), method: :delete %></td>
        <% else %>
          <td><%= link_to "ブックマーク", event_bookmarks_path(@event), method: :post %></td>
        <% end %>
      </tr>
    </tbody>
    </div>
  </div>
</div>

<div class="container">
  <div class="">
    <div>
      <h3>コメント</h3>
      <% @event.event_comments.each do |event_comment| %>
        <%= event_comment.user.name %>
        <%= event_comment.created_at.strftime('%Y/%m/%d') %><%= event_comment.comment %></br>
          <% if event_comment.user == current_user %>
          <%= link_to "削除",event_event_comment_path(event_comment.event, event_comment), method: :delete %></br>
          <% end %>
      <% end %>
    </div>
    
      <div>
      <%= form_with(model:[@event,@event_comment], local: true) do |f| %>
      <%= f.text_area :comment, rows:'5',placeholder: "コメントをここに",class: "col-md-8" %>
      <%= f.submit "送信する" %>
      <% end %>
      </div>
  </div>
</div>
