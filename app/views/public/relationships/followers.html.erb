<%= render 'layouts/sidemenu'%>
<div class="container">    
      <h2>フォロー一覧</h2>
      <div class="row">
        <div class="col-lg-12">
          <% if @users.exists? %>
          <table class="table">
            <thead>
              <tr>
                <th>image</th>
                <th>name</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <% @users.each do |user| %>
                <tr>
                  <td><%= attachment_image_tag user, :image, :fill, 50, 50, fallback: "no-image-icon.jpg" %></td>
                  <td><%= user.name %></td>
                  <td>フォロー数: <%= user.followings.count %></td>
                  <td>フォロワー数: <%= user.followers.count %></td>
                  <td><%= link_to 'show',users_path(user) ,class: 'btn btn-info text-white' %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <% else %>
            <p>ユーザーはいません</p>
          <% end %>
         </div>
      </div>
  </div>