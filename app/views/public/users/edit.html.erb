<%= render 'layouts/sidemenu'%>
<div class="container d-contents">
  <div class="row-md-12 mt-5">
    <div>
    <h3 class="ml-5 col-md-3 text-center d-inline" style="background-color:rgba(205, 197, 197, 0.53);">会員情報編集</h3>
    </div>
    
    <div class="mt-5">
    <%= form_with model:@user,url: user_path,local:true do |f|%>
    <%= render 'layouts/error_messages', model: f.object %>
    <%= attachment_image_tag @user, :image, :fill, 60, 60, fallback: "no_image.jpg"%>
    
      <div class="form-group">
         <%= f.label :画像 , class: "col-md-2" %>
          <%= f.attachment_field :image, placeholder: "プロフィール画像" %>
      </div>
          
      <div class="form-group">
        <%= f.label :氏名 , class: "col-md-2" %>
        <%= f.text_field :name, autocomplete: "last_name"%>
      </div>
      
      <div class="form-group">
        <%= f.label :メールアドレス , class: "col-md-2"%>
        <%= f.email_field :email, autocomplete: "email"%>
      </div>
    
      <div class="actions">
        <%= f.label :空白, class: "col-md-2 text-white" %>
        <%= f.submit"編集内容を保存する",class: "btn btn-success pl-5 pr-5 mr-3" %>
    <% end %>
    </div>
    <%= link_to "退会する", erasure_user_path ,class: "btn btn-danger offset-2 pr-4 pl-4 mt-5 text-white"%>
  </div>
</div>
