<div class = "container">

  <div class = "row m-5">
    <h3 class = "admin-customers-edit" style="background-color:rgba(107,90,105,0.1);"><%= @user.name %>さんの会員情報編集</h3>
  </div>

  <div class = "row justify-content-center">
      <%= form_with model:@user, url:admin_user_path, local:true do |f| %>
      
      <%= render 'admin/shared/error_messages',resource: @user %>
      
      <div class="form-group form-inline ">
        <label class="col-md-3">会員ID</label>
        <div class="col-md-9 ">
          <%= @user.id %>
        </div>
      </div>
      
      <div class="form-group form-inline ">
        <label class="col-md-3">氏名</label>
        <div class="col-md-9 ">
          <div class = "name_area d-flex">
            <div><%= f.text_field :name, class:"form-control" %></div>
          </div>
        </div>
      </div>
      
      <div class="form-group form-inline ">
        <label class="col-md-3">メールアドレス</label>
        <div class="col-md-9 ">
          <%= f.text_field :email, class:"form-control" %>
        </div>
      </div>
      
      <div class="form-group form-inline ">
        <label class="col-md-3">会員ステータス</label>
        <div class="col-md-9 d-flex">
          <div class = "form-check form-check-inline">
            <%= f.radio_button :is_deleted, 'false' %>
            <%= f.label :is_deleted, '有効', value: false %>
          </div>
          <div class = "form-check form-check-inline">
            <%= f.radio_button :is_deleted, 'true' %>
            <%= f.label :is_deleted, '退会', value: true %>
          </div>
        </div>
      </div>
      
      <div class="form-group form-inline">
        <div class = "col-md-3"></div>
        <div class="actions col-md-9">
          <%= f.submit "変更を保存", class: "btn btn-success" %>
        </div>
      </div>
      
    <% end %>
    
  </div>
</div>