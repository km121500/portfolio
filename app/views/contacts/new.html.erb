<%= render 'layouts/sidemenu'%>
<div>
<%= form_for(@contact, url: confirm_path) do |f| %>
  <div class="form-group">
    <%= f.label :name, 'お名前*' %>
    <%= f.text_field :name, autofocus: true, class: 'form-control contact' %>
  </div>

  <div class="form-group">
    <%= f.label :message, 'メッセージ*' %>
    <%= f.text_area :message, size: '10x10', class: 'form-control contact' %>
  </div>

  <div>
    <%= f.submit '入力内容確認' ,class: 'btn btn-info' %>
  </div>
<% end %>
</div>