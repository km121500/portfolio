<div class="container">
  <p class="pt-5 text-danger"><%= flash[:error] %></p>
  <div class="row-md-12 mt-5">
    
    <h4 class="ml-5 col-md-3 text-center d-inline" style="background-color: rgba(205, 197, 197, 0.53);">新規会員登録</h4>
    
    <div class="mt-5">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
      
      <div class="form-group">
        <%= f.label :名前 , class: "col-md-3"%>
        <%= f.text_field :name, autofocus: true %>
      </div>
    
      <div class="form-group">
        <%= f.label :メールアドレス , class: "col-md-3"%>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
    
      <div class="form-group">
        <%= f.label :パスワード（6文字以上）, class: "col-md-3" %>
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
    
      <div class="form-group">
        <%= f.label :パスワード確認, class: "col-md-3 " %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
    
      <div class="actions">
        <%= f.submit "新規登録",class: 'btn btn-success' %>
      </div>
    <% end %>
    </div>
    
    <div class="form-group mt-4 ml-5">
    <h4 class="col-md-3 text-center d-inline" style="background-color:rgba(205, 197, 197, 0.53);">既に登録済みの方</h4>
      <div class=" mt-3 offset-1">
        <%= link_to "こちら", new_user_session_path ,class: 'text text-primary'%>
        <span> からログインしてください。</span>
      </div>
    </div>
    
  </div>
</div>
